#user-show {
  iframe {
    .gm-style-mtc {
      display: none;
    }

    body {
      div:nth-child(2) {
        display: none;
      }
    }
  }

  .v-image {
    .v-responsive__content {
      display: flex;
      align-items: center;
      justify-content: center;

      img {
        width: 200px;
      }
    }
  }

  #media {
    position: relative;

    #chat {
      position: absolute;
      right: 12px;
      top: 12px;
    }

    #name {
      position: absolute;
      bottom: 0;
    }
  }
}

#secondary-info {
  .relative {
    position: relative;

    .user-avatar {
      position: absolute;
      top: 70px;
      left: 3px;
      z-index: 1;

      img {
        border: solid 4.5px white;
        box-shadow: 0 0.2rem 1rem rgba(0, 0, 0, 0.15) !important;
      }

      .name {
        min-height: 70px;
        padding: 12px;
        border-radius: 2px;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        background-color: white;
        padding-left: 24px;
        top: 0px;
        left: -15px;
        position: relative;
        box-shadow: 0 0.2rem 1rem rgba(0, 0, 0, 0.15) !important;
        z-index: -1;
      }
    }
  }

  #user-company-info {
    padding: 6px 12px;
    display: flex;
    align-items: center;

    .layout {
      display: flex;
      align-items: center;
    }
  }

  #interes, #alquiler {
    padding: 6px 12px;
  }

  #alquiler {
    #data {
      min-height: 300px;
      display: flex;
      align-items: center;
      justify-content: space-around;

      .v-progress-circular__info {
        text-align: center;

        i.big {
          font-size: 70px;
        }
      }

      #imagen {
        overflow: hidden;
        position: relative;
        width: 300px;
        height: 290px;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }
    }
  }

  #suscripciones {
    padding: 6px 12px 12px;

    .subscriptions {
      .flex {
        flex-basis: 24%;
        margin: 0.4rem 0.1rem;
      }
    }
  }

  #metadata {
    .sparkline-offset-top {
      .v-sheet--offset {
        top: -24px;
        position: relative;
      }
    }
  }
}